  <project path="system/update_engine" name="system_update_engine" remote="scorp" />

  <!-- Vendor -->
  <project path="vendor/scorpion" name="vendor_scorpion" remote="scorp" >
    <linkfile src="scripts/merge-aosp.sh" dest="merge-aosp.sh" />
  </project>
